{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node18",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@modelcontextprotocol/sdk": ["./node_modules/@modelcontextprotocol/sdk"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
